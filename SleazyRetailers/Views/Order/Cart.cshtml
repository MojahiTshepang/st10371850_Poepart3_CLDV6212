@model List<SleazyRetailers.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    decimal cartTotal = Model?.Sum(item => item.Total) ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cart"></i> Shopping Cart</h1>
        <div>
            <a href="@Url.Action("Products", "Customer")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Continue Shopping
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
                <h3 class="text-muted">Your cart is empty</h3>
                <p class="text-muted mb-4">Add some amazing products to your cart to get started!</p>
                <a href="@Url.Action("Products", "Customer")" class="btn btn-primary btn-lg">
                    <i class="bi bi-bag"></i> Start Shopping
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> Cart Items
                            <span class="badge bg-primary">@Model.Count</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model)
                        {
                            <div class="cart-item row align-items-center border-bottom p-3">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.ProductName"
                                             style="height: 80px; width: 80px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="height: 80px; width: 80px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <small class="text-muted">$@item.Price each</small>
                                </div>
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">Qty:</span>
                                        <strong>@item.Quantity</strong>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <h6 class="mb-0 text-primary">$@item.Total.ToString("F2")</h6>
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-outline-danger btn-sm remove-from-cart"
                                            data-product-id="@item.ProductId"
                                            title="Remove from cart">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (@Model.Count):</span>
                            <span>@Model.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$@cartTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-primary">$@cartTotal.ToString("F2")</strong>
                        </div>

                        <form method="post" action="@Url.Action("Checkout", "Order")" id="checkoutForm">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="shippingAddress" class="form-label fw-bold">
                                    <i class="bi bi-truck"></i> Shipping Address
                                </label>
                                <textarea class="form-control" id="shippingAddress" name="shippingAddress"
                                      rows="3" required placeholder="Enter your complete shipping address"></textarea>
                                <div class="form-text">We'll deliver your order to this address.</div>
                            </div>
                            <button type="submit" class="btn btn-success w-100 btn-lg">
                                <i class="bi bi-lock"></i> Secure Checkout
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i> Secure payment · 30-day returns
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.remove-from-cart').click(function() {
                var productId = $(this).data('product-id');
                var cartItem = $(this).closest('.cart-item');

                if (confirm('Are you sure you want to remove this item from your cart?')) {
                    $.post('@Url.Action("RemoveFromCart", "Order")', { productId: productId })
                        .done(function(response) {
                            if (response.success) {
                                cartItem.fadeOut(300, function() {
                                    $(this).remove();
                                    if (response.cartCount === 0) {
                                        location.reload();
                                    } else {
                                        location.reload();
                                    }
                                });
                            }
                        })
                        .fail(function() {
                            alert('Error removing item from cart');
                        });
                }
            });

            $('#checkoutForm').submit(function(e) {
                var address = $('#shippingAddress').val().trim();
                if (!address) {
                    e.preventDefault();
                    $('#shippingAddress').addClass('is-invalid');
                    $('#shippingAddress').focus();

                    if (!$('#shippingAddress').siblings('.invalid-feedback').length) {
                        $('#shippingAddress').after(
                            '<div class="invalid-feedback">Please enter your shipping address</div>'
                        );
                    }
                }
            });

            $('#shippingAddress').on('input', function() {
                if ($(this).val().trim()) {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}