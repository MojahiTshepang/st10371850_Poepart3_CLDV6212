@model Order
@{
    ViewData["Title"] = "Create Order";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Order</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" id="orderForm">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <h5>Please fix the following errors:</h5>
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProductId" class="form-label fw-bold">Select Product *</label>
                                    <select asp-for="ProductId" class="form-select" id="productSelect" required>
                                        <option value="">Choose a product...</option>
                                        @foreach (var product in ViewBag.Products)
                                        {
                                            <option value="@product.Id"
                                                    data-price="@product.Price"
                                                    data-stock="@product.StockAvailable"
                                                    data-name="@product.ProductName">
                                                @product.ProductName - $@product.Price (Stock: @product.StockAvailable)
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label fw-bold">Quantity *</label>
                                    <input asp-for="Quantity" type="number" class="form-control" id="quantityInput"
                                           min="1" value="1" required>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                    <div class="form-text" id="stockInfo">Select a product first</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label fw-bold">
                                <i class="bi bi-geo-alt"></i> Shipping Address *
                            </label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3"
                                      placeholder="Enter your complete shipping address" required></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-calculator"></i> Order Summary</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Unit Price:</small>
                                        <div id="unitPrice">$0.00</div>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Total Amount:</small>
                                        <div id="totalAmountDisplay" class="h5 text-success">$0.00</div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small class="text-muted" id="selectedProduct">No product selected</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("MyOrders", "Customer")" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitButton">
                                <i class="bi bi-check-lg"></i> Place Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var productSelect = $('#productSelect');
            var quantityInput = $('#quantityInput');
            var unitPriceElement = $('#unitPrice');
            var totalAmountDisplay = $('#totalAmountDisplay');
            var stockInfoElement = $('#stockInfo');
            var selectedProductElement = $('#selectedProduct');
            var submitButton = $('#submitButton');

            function updateOrderSummary() {
                var selectedOption = productSelect.find('option:selected');
                var price = parseFloat(selectedOption.data('price')) || 0;
                var stock = parseInt(selectedOption.data('stock')) || 0;
                var productName = selectedOption.data('name') || '';
                var quantity = parseInt(quantityInput.val()) || 0;

                var total = price * quantity;

                unitPriceElement.text('$' + price.toFixed(2));
                totalAmountDisplay.text('$' + total.toFixed(2));

                if (selectedOption.val()) {
                    selectedProductElement.text('Selected: ' + productName);
                    stockInfoElement.text(stock + ' items available in stock');

                    // Update max quantity
                    quantityInput.attr('max', stock);

                    // Validate quantity
                    if (quantity > stock) {
                        stockInfoElement.addClass('text-danger');
                        stockInfoElement.text('Only ' + stock + ' items available!');
                        submitButton.prop('disabled', true);
                    } else if (quantity < 1) {
                        stockInfoElement.addClass('text-danger');
                        stockInfoElement.text('Quantity must be at least 1');
                        submitButton.prop('disabled', true);
                    } else {
                        stockInfoElement.removeClass('text-danger');
                        submitButton.prop('disabled', false);
                    }
                } else {
                    selectedProductElement.text('No product selected');
                    stockInfoElement.text('Select a product first');
                    stockInfoElement.removeClass('text-danger');
                    submitButton.prop('disabled', false);
                }
            }

            productSelect.change(updateOrderSummary);
            quantityInput.on('input', updateOrderSummary);

            // Initial update
            updateOrderSummary();
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}