@model SleazyRetailers.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2><i class="fas fa-edit"></i> Edit Product</h2>
<hr />

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="StockAvailable" class="form-label"></label>
            <input asp-for="StockAvailable" class="form-control" type="number" />
            <span asp-validation-for="StockAvailable" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image (Blob Storage)</label>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mb-2">
                <img src="@Model.ImageUrl" alt="Current Product Image" style="max-width: 150px; height: auto; border-radius: 5px;" />
            </div>
        }
        else
        {
            <p>No current image uploaded.</p>
        }

        <label for="newImage" class="form-label">Change Image</label>
        <input type="file" name="newImage" id="newImage" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Upload a new image to replace the current one.</small>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}