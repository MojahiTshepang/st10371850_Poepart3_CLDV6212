@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-speedometer2"></i> Welcome, @ViewBag.FirstName!</h4>
                </div>
                <div class="card-body">
                    <p class="lead">Welcome to your customer dashboard. Here you can browse products, manage your orders, and track your purchases.</p>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-bag display-4 text-primary mb-3"></i>
                                    <h5>Browse Products</h5>
                                    <p>Explore our amazing product collection</p>
                                    <a href="@Url.Action("Products", "Customer")" class="btn btn-primary">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-list-check display-4 text-success mb-3"></i>
                                    <h5>My Orders</h5>
                                    <p>View your order history and status</p>
                                    <a href="@Url.Action("MyOrders", "Customer")" class="btn btn-success">View Orders</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("Products", "Customer")" class="list-group-item list-group-item-action">
                            <i class="bi bi-search me-2"></i>Browse Products
                        </a>
                        <a href="@Url.Action("MyOrders", "Customer")" class="list-group-item list-group-item-action">
                            <i class="bi bi-clock-history me-2"></i>Order History
                        </a>
                        <a href="@Url.Action("Cart", "Order")" class="list-group-item list-group-item-action">
                            <i class="bi bi-cart me-2"></i>Shopping Cart
                        </a>
                        <a href="@Url.Action("Create", "Order")" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle me-2"></i>Create Order
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>