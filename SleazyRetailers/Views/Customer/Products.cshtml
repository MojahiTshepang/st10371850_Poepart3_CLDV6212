@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-grid"></i> Our Products</h1>
        <div>
            <a href="@Url.Action("Cart", "Order")" class="btn btn-outline-primary position-relative">
                <i class="bi bi-cart"></i> Cart
                @if (ViewBag.CartCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @ViewBag.CartCount
                    </span>
                }
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <h4><i class="bi bi-exclamation-triangle"></i> No Products Available</h4>
            <p>Please check back later for new products.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="card h-100 product-card shadow-sm">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.ProductName"
                                     style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center product-image-placeholder"
                                     style="height: 200px;">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge @(product.StockAvailable > 10 ? "bg-success" : product.StockAvailable > 0 ? "bg-warning" : "bg-danger")">
                                    @if (product.StockAvailable > 10)
                                    {
                                        <text>In Stock</text>
                                    }
                                    else if (product.StockAvailable > 0)
                                    {
                                        <text>Low Stock</text>
                                    }
                                    else
                                    {
                                        <text>Out of Stock</text>
                                    }
                                </span>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@product.ProductName">@product.ProductName</h5>
                            <p class="card-text text-muted small flex-grow-1">@product.Description</p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h4 class="text-primary mb-0">$@product.Price</h4>
                                    <small class="text-muted">@product.StockAvailable left</small>
                                </div>

                                @if (product.StockAvailable > 0)
                                {
                                    <div class="d-flex gap-2">
                                        <input type="number" class="form-control quantity-input"
                                               value="1" min="1" max="@product.StockAvailable"
                                               style="width: 80px;"
                                               data-product-id="@product.Id"
                                               data-max-stock="@product.StockAvailable">
                                        <button class="btn btn-primary add-to-cart flex-grow-1"
                                                data-product-id="@product.Id">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>
                                        <i class="bi bi-x-circle"></i> Out of Stock
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function() {
                var productId = $(this).data('product-id');
                var quantityInput = $(this).siblings('.quantity-input');
                var quantity = parseInt(quantityInput.val());
                var maxStock = parseInt(quantityInput.data('max-stock'));

                if (quantity < 1) {
                    alert('Quantity must be at least 1');
                    return;
                }

                if (quantity > maxStock) {
                    alert('Cannot add more than ' + maxStock + ' items');
                    return;
                }

                var button = $(this);
                button.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Adding...');

                $.post('@Url.Action("AddToCart", "Order")', {
                    productId: productId,
                    quantity: quantity
                })
                .done(function(response) {
                    if (response.success) {
                        alert('Product added to cart!');
                        // You could update cart badge here
                        location.reload(); // Simple reload to update cart count
                    } else {
                        alert('Error: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('Error adding product to cart');
                })
                .always(function() {
                    button.prop('disabled', false).html('<i class="bi bi-cart-plus"></i> Add to Cart');
                });
            });

            // Validate quantity input
            $('.quantity-input').change(function() {
                var max = parseInt($(this).data('max-stock'));
                var value = parseInt($(this).val());

                if (value < 1) {
                    $(this).val(1);
                } else if (value > max) {
                    $(this).val(max);
                }
            });
        });
    </script>
}