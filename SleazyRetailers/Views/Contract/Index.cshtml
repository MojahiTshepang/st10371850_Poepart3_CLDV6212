@model IEnumerable<Contract>

@{
    ViewData["Title"] = "Contract Management";
}

<div class="container my-5">
    <h2><i class="fas fa-file-contract"></i> Contract Management</h2>
    <p class="lead">Manage dummy contracts stored in Azure Files</p>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col">
            <a asp-action="Upload" class="btn btn-primary">
                <i class="fas fa-upload"></i> Upload New Contract
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list"></i> Stored Contracts (@Model.Count())
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Contract Name</th>
                                <th>Type</th>
                                <th>File Size</th>
                                <th>Upload Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contract in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-file @(contract.ContractName.EndsWith(".pdf") ? "text-danger" : "text-primary")"></i>
                                        <strong>@contract.ContractName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@contract.ContractType</span>
                                    </td>
                                    <td>@(contract.FileSize.HasValue? FormatFileSize(contract.FileSize.Value) : "N/A")</td>
                                    <td>@contract.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-fileName="@contract.ContractName"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Download" asp-route-fileName="@contract.ContractName"
                                               class="btn btn-outline-primary" title="Download">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="fileName" value="@contract.ContractName" />
                                                <button type="submit" class="btn btn-outline-danger"
                                                        title="Delete" onclick="return confirm('Are you sure you want to delete this contract?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <h5>No contracts found</h5>
                    <p class="text-muted">Upload your first dummy contract to get started.</p>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Upload First Contract
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 p-3 bg-light rounded border">
        <h5><i class="fas fa-info-circle"></i> About Azure Files Storage</h5>
        <p class="mb-0">
            Contracts are stored in <strong>Azure Files Share</strong> providing secure, scalable file storage
            for business documents and contracts with SMB protocol support.
        </p>
    </div>
</div>

@functions {
    public string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double len = bytes;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}